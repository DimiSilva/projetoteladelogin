@model LoginScreen.Models.ViewModels.EditarUsuarioViewModel
@{
    ViewData["Title"] = "Editar dados";
}
    <div class="container" id="logado">
        <div class="header">
            <h3 class="texto-padrao" style="position:relative; display:inline;">LoginScreen</h3>
            <div class="nav" style="position:relative; float:right;">
                <span class="texto-padrao" style="font-size:17px;">@ViewData["UsuarioLogado"]</span>|||
                <a class="texto-padrao" asp-controller="Entrar" asp-action="Logar">Deslogar</a>
            </div>
        </div>
        <div>
            <div>
                <h1 class="tituloPagina">Alterar dados</h1>
            </div>
            <div class="d-flex justify-content-center">
                <form style="width:30%; margin-top:20px;" asp-action="EditarUsuario">
                    <span asp-validation-for="nome" class="text-danger"></span>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-id-card"></i></span>
                        </div>
                        <input asp-for="nome" type="text" class="form-control" placeholder="Nome" />
                    </div>

                    <span asp-validation-for="novaSenha" class="text-danger"></span>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input asp-for="novaSenha" type="password" class="form-control" placeholder="Senha">
                    </div>

                    <span asp-validation-for="confirmarNovaSenha" class="text-danger"></span>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input asp-for="confirmarNovaSenha" type="password" class="form-control" placeholder="Confirme a senha">
                    </div>
                    <div class="form-group d-flex justify-content-center" style="margin-top: 10px;">
                        <input type="submit" value="Alterar" class="btn btn-dark float-right">
                    </div>
                </form>
            </div>
        </div>
    </div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
