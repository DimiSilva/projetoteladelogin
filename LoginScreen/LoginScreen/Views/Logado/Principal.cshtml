@model IEnumerable<LoginScreen.Models.Usuario>
@{
    ViewData["Title"] = "Principal";
}
<div class="container" id="logado">
    <div class="header">
        <h3 class="texto-padrao" style="position:relative; display:inline;">LoginScreen</h3>
        <div class="nav" style="position:relative; float:right;">
            <span class="texto-padrao" style="font-size:17px;">@ViewData["UsuarioLogado"]</span>|||
            <a class="texto-padrao" asp-controller="Entrar" asp-action="Logar">Deslogar</a>
        </div>
    </div>
    <div>
        <div >
            <h1 class="tituloPagina">Cadastrados</h1>
        </div>
        <div>
            <table class="table table-striped table-dark table-bordered">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.id)</th>
                        <th>@Html.DisplayNameFor(model => model.nomeDeUsuario)</th>
                        <th>@Html.DisplayNameFor(model => model.nome)</th>
                        <th>@Html.DisplayNameFor(model => model.email)</th>
                        <th>@Html.DisplayNameFor(model => model.senha)</th>
                        <th><span>Configurar</span></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelitem => item.id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.nomeDeUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.senha)
                            </td>
                            <td>
                                @if (item.id != int.Parse(ViewData["IdLogado"].ToString()) && item.nomeDeUsuario != "Admin")
                                {
                                    <a asp-controller="Logado" asp-action="DeletarUsuario" asp-route-id="@item.id">Deletar</a><span style="opacity:0.5">&nbsp;|&nbsp;</span>
                                }
                                @if (item.nomeDeUsuario != "Admin")
                                {
                                    <a asp-controller="Logado" asp-action="EditarUsuario" asp-route-id="@item.id">Editar</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>