@model LoginScreen.Models.ViewModels.AlterarSenhaViewModel
@{
    ViewData["Title"] = "Alterar senha";
}
<div class="container">
    <div class="d-flex justify-content-center">
        <div class="card" id="card-login">
            <div class="card-header" style="text-align:center;">
                <h1 id="tituloPrincipal">@ViewData["title"]</h1>
            </div>
            <div class="card-body">
                <form asp-action="AlterarSenha">

                    <span asp-validation-for="novaSenha" class="text-danger"></span>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input asp-for="novaSenha" type="password" class="form-control" placeholder="Nova senha">
                    </div>

                    <span asp-validation-for="confirmarNovaSenha" class="text-danger"></span>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input asp-for="confirmarNovaSenha" type="password" class="form-control" placeholder="Confirme a nova senha">
                    </div>
                    <div class="form-group d-flex justify-content-center" style="margin-top: 10px;">
                        <input type="submit" value="Alterar" class="btn btn-dark float-right">
                    </div>
                </form>

                <div class="card-footer">
                    <div class="d-flex justify-content-center ">
                        <a asp-action="Logar" class="texto-padrao">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}