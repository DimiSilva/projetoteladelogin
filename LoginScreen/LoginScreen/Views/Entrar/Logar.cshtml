@model LoginScreen.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Logar";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <div class="card" id="card-login">
            <div class="card-header" style="text-align:center;">
                <h1 id="tituloPrincipal">Entrar</h1>
            </div>
            <div class="card-body">
                <form asp-action="Logar">
                    <div class="text-danger">@ViewData["ErroDeCredencias"]</div>
                    <div class="text-success">@ViewData["message"]</div>
                    <span asp-validation-for="nomeDeUsuario" class="text-danger"></span>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                        </div>
                        <input asp-for="nomeDeUsuario" type="text" class="form-control" placeholder="Nome de usuário" />
                    </div>
                    <span asp-validation-for="senha" class="text-danger"></span>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input asp-for="senha" type="password" class="form-control" placeholder="Senha">
                    </div>
                    <div class="form-group d-flex justify-content-center" style="margin-top: 10px;">
                        <input type="submit" value="entrar" class="btn btn-dark float-right">
                    </div>
                </form>
                <div class="card-footer">
                    <div class="d-flex justify-content-center ">
                        <a asp-controller="Entrar" asp-action="Cadastrar" class="texto-padrao">Cadastrar</a>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a asp-controller="Entrar" asp-action="RecuperarSenha" class="texto-padrao">Esqueci minha senha</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}