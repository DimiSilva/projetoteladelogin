@model LoginScreen.Models.ViewModels.CadastroViewModel
@{
    ViewData["Title"] = "Cadastrar";
}
<div class="container">
    <div class="d-flex justify-content-center">
        <div class="card" id="card-cadastro">
            <div class="card-header" style="text-align:center;">
                <h1 id="tituloPrincipal">Cadastro</h1>
            </div>
            <div class="card-body">
                <form asp-action="Cadastrar">
                    <span class="text-danger">@ViewData["UsuarioErro"]</span>
                    <span asp-validation-for="nomeDeUsuario" class="text-danger"></span>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                        </div>
                        <input asp-for="nomeDeUsuario" type="text" class="form-control" placeholder="Nome de usuário" />
                    </div>

                    <span asp-validation-for="nome" class="text-danger"></span>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-id-card"></i></span>
                        </div>
                        <input asp-for="nome" type="text" class="form-control" placeholder="Nome" />
                    </div>

                    <span class="text-danger">@ViewData["EmailErro"]</span>
                    <span asp-validation-for="email" class="text-danger"></span>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-envelope-square"></i></span>
                        </div>
                        <input asp-for="email" type="email" class="form-control" placeholder="Email" />
                    </div>

                    <span asp-validation-for="senha" class="text-danger"></span>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input asp-for="senha" type="password" class="form-control" placeholder="Senha">
                    </div>

                    <span asp-validation-for="confirmarSenha" class="text-danger"></span>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input asp-for="confirmarSenha" type="password" class="form-control" placeholder="Confirme a senha">
                    </div>
                    <div class="form-group d-flex justify-content-center" style="margin-top: 10px;">
                        <input type="submit" value="Cadastrar" class="btn btn-dark float-right">
                    </div>
                </form>

                <div class="card-footer">
                    <div class="d-flex justify-content-center ">
                        <a asp-action="Logar" class="texto-padrao">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
