@model LoginScreen.Models.ViewModels.ConfirmacaoPorEmailViewModel
@{
    ViewData["Title"] = "Confirmar conta";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <div class="card" id="card-login">
            <div class="card-header" style="text-align:center;">
                <h1 id="tituloPrincipal">@ViewData["Title"]</h1>
            </div>
            <div class="card-body">
                <form asp-action="ConfirmarConta" method="post">
                    <span style="text-align:center;" class="texto-padrao"></span>
                    <span class="text-danger">@ViewBag.codigoInvalido</span>
                    <span asp-validation-for="codigo" class="text-danger"></span>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-barcode"></i></span>
                        </div>
                        <input asp-for="codigo" class="form-control" placeholder="Código enviado" />
                    </div>
                    <div class="form-group d-flex justify-content-center" style="margin-top: 10px;">
                        <input type="submit" value="Confirmar" class="btn btn-dark float-right">
                    </div>
                </form>
                <div class="card-footer">
                    <div class="d-flex justify-content-center ">
                        <a asp-action="Logar" class="texto-padrao">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}