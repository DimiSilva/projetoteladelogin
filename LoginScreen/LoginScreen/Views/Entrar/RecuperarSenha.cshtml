@model LoginScreen.Models.ViewModels.RecuperarSenhaViewModel
@{
    ViewData["Title"] = "Recuperar senha";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <div class="card" id="card-login">
            <div class="card-header" style="text-align:center;">
                <h1 id="tituloPrincipal">Recuperar senha</h1>
            </div>
            <div class="card-body">
                <form asp-action="RecuperarSenha">
                    <div class="text-danger">@ViewData["erroDeUsuario"]</div>
                    <div class="text-danger">@ViewData["erroDeSenha"]</div>

                    <span asp-validation-for="email" class="text-danger"></span>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-envelope-square"></i></span>
                        </div>
                        <input asp-for="email" type="text" class="form-control" placeholder="Digite o email" />
                    </div>
                    <div class="form-group d-flex justify-content-center" style="margin-top: 10px;">
                        <input type="submit" value="Recuperar" class="btn btn-dark float-right">
                    </div>
                </form>
                <div class="card-footer">
                    <div class="d-flex justify-content-center ">
                        <a asp-action="Logar" class="texto-padrao">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}