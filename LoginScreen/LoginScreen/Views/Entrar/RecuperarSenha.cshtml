@model LoginScreen.Models.Usuario
@{
    ViewData["Title"] = "Recuperar senha";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <div class="card" id="card-login">
            <div class="card-header" style="text-align:center;">
                <h1 id="tituloPrincipal">Recuperar senha</h1>
            </div>
            <div class="card-body">
                <form asp-action="RecuperarSenha">
                    <div class="text-danger">@ViewData["erroDeUsuario"]</div>
                    <div class="text-danger">@ViewData["erroDeSenha"]</div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                        </div>
                        <input asp-for="nomeDeUsuario" type="text" class="form-control" placeholder="Nome de usuário" />
                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input asp-for="senha" type="password" class="form-control" placeholder="Nova senha">
                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input asp-for="confirmarSenha" type="password" class="form-control" placeholder="Confirme a nova senha">
                    </div>
                    <div class="form-group d-flex justify-content-center" style="margin-top: 10px;">
                        <input type="submit" value="Recuperar" class="btn btn-dark float-right">
                    </div>
                </form>
                <div class="card-footer">
                    <div class="d-flex justify-content-center ">
                        <a asp-action="Logar" class="texto-padrao">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
